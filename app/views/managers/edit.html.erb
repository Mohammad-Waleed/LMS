<h2 class="text-center">Edit Manager</h2>
<div class="col-md-3 container">
  <%= form_for @manager do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
    </div>

    <div class="form-group">
    <%= f.file_field :image,class:"form-control btn btn-primary" %>
    </div>

    <div class="form-group">
      <%= f.label :status %>
      <%= f.select( :status , options_for_select([['Active','active'],['Inactive','inactive']]),{},{class:"form-control"})%>
    </div>

    <div class="form-group">
      <%= f.submit "Update ",class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
